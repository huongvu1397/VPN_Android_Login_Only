<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_25"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:paddingRight="@dimen/margin_25"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/mImgAndroidDevice"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_android_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:id="@+id/mImgIOSDevice"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_ios_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mTextNameDevice"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_toEndOf="@id/mImgAndroidDevice"
            android:layout_width="wrap_content"
            android:text="SHK-547"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_m"
            android:layout_height="wrap_content"/>

    <ImageView
            android:visibility="visible"
            android:id="@+id/mImgDelete"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_xmlid_1429"
            android:layout_height="wrap_content"/>
</RelativeLayout>
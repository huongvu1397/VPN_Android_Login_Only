<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!--toolbar-->
    <LinearLayout
            android:background="@color/lightToolbar"
            android:id="@+id/toolbar_faq"
            android:padding="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_back_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/colorBlack"
                android:text="@string/most_frequently_asked_question"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/altertext"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_below="@id/toolbar_faq"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/colorIndicator"
            android:text="@string/here_are_few_quick_steps_that_can_help_you_troubleshoot_issues"
            android:layout_height="wrap_content"/>
    <ExpandableListView
            android:id="@+id/mExpanableListView"
            android:layout_marginTop="@dimen/_21sdp"
            android:layout_below="@id/altertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </ExpandableListView>

</RelativeLayout>